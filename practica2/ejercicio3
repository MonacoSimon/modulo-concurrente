programa ejemplo
procesos
  proceso juntarFlor(ES cantFlor:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cantFlor:=cantFlor+1
  fin
  proceso juntarPapel(ES cantPapel:numero)
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      cantPapel:=cantPapel+1
  fin
  proceso recorrerA(ES cantPapel:numero)
  comenzar
    repetir 9
      juntarPapel(cantPapel)
      mover
    juntarPapel(cantPapel)
  fin
  proceso recorrerB (ES cantFlor:numero)
  comenzar
    repetir 9
      juntarFlor(cantFlor)
      mover
    juntarFlor(cantFlor)
  fin
areas
  area1: AreaP (1,1,10,1)
  area2: AreaP (1,5,10,5)
  area3: AreaP (11,1,20,1)
  area4: AreaP (11,5,20,5)
  area5: AreaP (21,1,30,1)
  area6: AreaP (21,5,30,5)
  area7: AreaP (31,1,40,1)
  area8: AreaP (31,5,40,5)
  
robots
  robot a1
  variables
    contPapel:numero
  comenzar
    derecha
    contPapel:=0
    recorrerA(contPapel)
    EnviarMensaje(contPapel,a2)
  fin
  robot a2
  variables
    contPapel:numero
  comenzar
    derecha
    RecibirMensaje(contPapel,a1)
    recorrerA(contPapel)
    Informar(contPapel)
  fin
  robot b1
  variables
    contFlor:numero
  comenzar
    derecha
    contFlor:=0
    recorrerB(contFlor)
    EnviarMensaje(contFlor,r2)
  fin
  robot b2
  variables
    contFlor:numero
  comenzar
    derecha
    RecibirMensaje(contFlor,r1)
    recorrerB(contFlor)
    Informar(contFlor)
  fin
variables
  a1: a1
  a2: a2
  r1: b1
  r2: b2
comenzar
  AsignarArea(a1, area1)
  AsignarArea(a2, area3)
  AsignarArea(r1, area2)
  AsignarArea(r2, area4)
  AsignarArea (r1, area5)
  AsignarArea (r2, area7)
  Iniciar(a1, 1,1)
  Iniciar(a2, 11,1)
  Iniciar(r1, 1,5)
  Iniciar(r2, 11,5)
fin